<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mikeschen.www.threeo">
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:name=".ThreeoApplication"
        android:allowBackup="true"
        android:icon="@drawable/mainwhite"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".ui.PostActivity"
            android:label="@string/title_activity_post" />
        <activity
            android:name=".ui.ScribeActivity"
            android:label="@string/title_activity_scribe" />
        <activity android:name=".ui.PhotoDetailActivity" />
        <activity android:name=".ui.CreateAccountActivity" />
        <activity android:name=".ui.LoginActivity">
            <intent-filter android:label="@string/app_name">
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>
</manifest>